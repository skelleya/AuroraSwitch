<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Colors -->
    <Color x:Key="WindowBackgroundColor">#FF0E1117</Color>
    <Color x:Key="CardBackgroundColor">#FF171B23</Color>
    <Color x:Key="CardBorderColor">#FF262B38</Color>
    <Color x:Key="PrimaryTextColor">#FFF2F5FF</Color>
    <Color x:Key="SecondaryTextColor">#FFA7B0C3</Color>
    <Color x:Key="AccentColor">#FF5C7CFA</Color>
    <Color x:Key="AccentHoverColor">#FF6B89FF</Color>
    <Color x:Key="AccentForegroundColor">#FFFFFFFF</Color>
    <Color x:Key="SecondaryButtonColor">#FF262B38</Color>
    <Color x:Key="SecondaryButtonForegroundColor">#FFF2F5FF</Color>
    <Color x:Key="DisabledButtonColor">#FF1C1F27</Color>
    <Color x:Key="DisabledButtonForegroundColor">#FF6E778C</Color>
    <Color x:Key="MenuBackgroundColor">#FF171B23</Color>
    <Color x:Key="StatusBarBackgroundColor">#FF131722</Color>
    <Color x:Key="VideoBackgroundColor">#FF050608</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentBrushHover" Color="{StaticResource AccentHoverColor}"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForegroundColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonBrush" Color="{StaticResource SecondaryButtonColor}"/>
    <SolidColorBrush x:Key="SecondaryButtonForegroundBrush" Color="{StaticResource SecondaryButtonForegroundColor}"/>
    <SolidColorBrush x:Key="DisabledButtonBrush" Color="{StaticResource DisabledButtonColor}"/>
    <SolidColorBrush x:Key="DisabledButtonForegroundBrush" Color="{StaticResource DisabledButtonForegroundColor}"/>
    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource MenuBackgroundColor}"/>
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="{StaticResource PrimaryTextColor}"/>
    <SolidColorBrush x:Key="StatusBarBackgroundBrush" Color="{StaticResource StatusBarBackgroundColor}"/>
    <SolidColorBrush x:Key="StatusBarForegroundBrush" Color="{StaticResource SecondaryTextColor}"/>
    <SolidColorBrush x:Key="VideoBackgroundBrush" Color="{StaticResource VideoBackgroundColor}"/>
    <SolidColorBrush x:Key="ListSeparatorBrush" Color="#332F3440"/>

    <!-- Buttons -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{DynamicResource AccentForegroundBrush}"/>
        <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="6"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource AccentBrushHover}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{DynamicResource DisabledButtonBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource DisabledButtonForegroundBrush}"/>
                <Setter Property="Opacity" Value="0.8"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{DynamicResource SecondaryButtonBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource SecondaryButtonForegroundBrush}"/>
    </Style>
</ResourceDictionary>

