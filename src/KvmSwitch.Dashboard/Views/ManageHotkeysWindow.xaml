<Window x:Class="KvmSwitch.Dashboard.Views.ManageHotkeysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Hotkeys"
        Height="420"
        Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Configure global hotkeys for endpoint switching"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,0,0,8"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding HotkeyItems}"
                  SelectedItem="{Binding SelectedHotkey, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  Margin="0,0,0,12">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hotkey"
                                    Binding="{Binding DisplayText}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Endpoint"
                                    Binding="{Binding EndpointName}"
                                    Width="2*"/>
                <DataGridTextColumn Header="Scope"
                                    Binding="{Binding Scope}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Left">
                <Button Content="Add"
                        Width="90"
                        Margin="0,0,8,0"
                        Click="AddHotkey_Click"/>
                <Button Content="Edit"
                        Width="90"
                        Margin="0,0,8,0"
                        Click="EditHotkey_Click"/>
                <Button Content="Remove"
                        Width="90"
                        Click="RemoveHotkey_Click"/>
            </StackPanel>
            <TextBlock Text="{Binding StatusMessage}"
                       Margin="12,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="Gray"/>
            <Button Content="Close"
                    Width="90"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,0"
                    Click="Close_Click"
                    DockPanel.Dock="Right"/>
        </StackPanel>
    </Grid>
</Window>


