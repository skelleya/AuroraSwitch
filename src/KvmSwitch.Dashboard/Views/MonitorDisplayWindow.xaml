<Window x:Class="KvmSwitch.Dashboard.Views.MonitorDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:KvmSwitch.Dashboard.Converters"
        Title="Projection"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Black"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Window.Resources>
    <Grid Background="Black">
        <Image Source="{Binding VideoFrameSource}"
               Stretch="Uniform"
               Visibility="{Binding IsVideoVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
        <TextBlock Text="{Binding VideoPlaceholderText}"
                   Foreground="#DDDDDD"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="40"
                   Visibility="{Binding IsVideoVisible, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
        <Border Background="#66000000" HorizontalAlignment="Right" VerticalAlignment="Bottom" CornerRadius="4" Margin="20" Padding="10">
            <StackPanel>
                <TextBlock Text="Projection Mode" Foreground="White" FontWeight="Bold"/>
                <TextBlock Text="Press Esc or double-click to exit" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

